<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="?android:attr/spinnerDropDownItemStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:singleLine="true">

    <ImageView
        android:id="@+id/intp_row_country_iv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/intp_item_image_contentDescription"
        android:src="@drawable/country_az"
        app:layout_constraintBottom_toBottomOf="@+id/intp_row_country_name"
        app:layout_constraintDimensionRatio="h,37:73"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/intp_row_country_name" />

    <TextView
        android:id="@+id/intp_row_country_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:gravity="start"
        android:maxLines="1"
        android:paddingLeft="8dp"
        android:paddingStart="8dp"
        android:singleLine="true"
        android:text="@string/intp_item_preview_country"
        android:textColor="#FFF"
        app:layout_constraintBottom_toTopOf="@+id/intp_row_country_divider"
        app:layout_constraintEnd_toStartOf="@+id/intp_row_country_dialcode"
        app:layout_constraintStart_toEndOf="@+id/intp_row_country_iv"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/intp_row_country_dialcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="@string/intp_item_preview_dialCode"
        android:textColor="#FFF"
        app:layout_constraintBottom_toBottomOf="@+id/intp_row_country_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/intp_row_country_name" />

    <TextView
        android:id="@+id/intp_row_country_divider"
        android:layout_width="0dp"
        android:layout_height="@dimen/intp_dialog_row_default_divider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</android.support.constraint.ConstraintLayout>